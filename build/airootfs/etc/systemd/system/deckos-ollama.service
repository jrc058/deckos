[Unit]
Description=DeckOS Ollama Service
After=network.target

[Service]
Type=simple
ExecStart=/usr/local/bin/ollama serve
Restart=on-failure
RestartSec=10
User=ollama
Group=ollama
Environment="OLLAMA_HOST=127.0.0.1:11434"
Environment="OLLAMA_MODELS=/var/lib/deckos/models/ollama"

[Install]
WantedBy=multi-user.target
